# SecureCare Production Environment for Azure
# Copy this file to .env and update with your actual values

# Database Configuration (Azure SQL Database)
DB_SERVER=your-azure-sql-server.database.windows.net
DB_DATABASE=SecureCare
DB_USER=your-db-username
DB_PASSWORD=your-secure-password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# Server Configuration
PORT=8080
NODE_ENV=production

# CORS Configuration
CORS_ORIGINS=https://your-app-name.azurewebsites.net,https://your-custom-domain.com

# Azure App Service Configuration
WEBSITES_ENABLE_APP_SERVICE_STORAGE=false
WEBSITES_NODE_DEFAULT_VERSION=18.17.0
